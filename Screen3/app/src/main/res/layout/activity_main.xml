<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:background="@drawable/calculatorback1"
    >

    <EditText
        android:id="@+id/calculation"
        android:layout_width="match_parent"
        android:layout_height="95dp"
        android:layout_marginTop="5dp"
        android:textSize="56dp"
        android:textStyle="bold"
        android:textColor="@color/white"
        android:textAlignment="textEnd"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:gravity="end" />
    <EditText
        android:id="@+id/result"
        android:layout_width="match_parent"
        android:layout_height="95dp"
        android:layout_marginTop="5dp"

        android:textColor="@color/white"
        android:textStyle="bold"
        android:textAlignment="textEnd"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/calculation"
        android:gravity="end" />
    <Button
        android:id="@+id/btnAC"
        android:layout_width="200dp"
        android:layout_height="80dp"
        android:backgroundTint="#7FDD5D"
        android:textColor="@color/white"
        android:text="CLEAR"
        android:textSize="20dp"
        android:textStyle="bold"
        app:layout_constraintTop_toBottomOf="@id/result"
        android:layout_marginLeft="5dp"

        app:layout_constraintLeft_toLeftOf="parent"/>
    <Button
        android:id="@+id/btnDel"
        android:layout_width="200dp"
        android:layout_height="80dp"
        android:backgroundTint="#7FDD5D"
        android:textColor="@color/white"
        android:text="BACKSPACE"
        android:textSize="20dp"
        android:textStyle="bold"
        android:layout_marginLeft="5dp"
        app:layout_constraintTop_toTopOf="@id/btnAC"
        app:layout_constraintLeft_toRightOf="@id/btnAC" />
    <Button
        android:id="@+id/btn7"
        android:layout_width="100dp"
        android:layout_height="80dp"
        android:backgroundTint="#7FDD5D"
        android:textColor="@color/white"
        android:text="7"
        android:textSize="30dp"
        android:textStyle="bold"
        android:layout_marginLeft="5dp"
        app:layout_constraintTop_toBottomOf="@id/btnAC"
        app:layout_constraintLeft_toLeftOf="parent" />
    <Button
        android:id="@+id/btn8"
        android:layout_width="100dp"
        android:layout_height="80dp"
        android:backgroundTint="#7FDD5D"
        android:textColor="@color/white"
        android:text="8"
        android:textSize="30dp"
        android:textStyle="bold"
        android:layout_marginLeft="5dp"
        app:layout_constraintTop_toTopOf="@id/btn7"
        app:layout_constraintLeft_toRightOf="@id/btn7" />
    <Button
        android:id="@+id/btn9"
        android:layout_width="100dp"
        android:layout_height="80dp"
        android:backgroundTint="#7FDD5D"
        android:textColor="@color/white"
        android:text="9"
        android:textSize="30dp"
        android:textStyle="bold"
        android:layout_marginLeft="5dp"
        app:layout_constraintTop_toTopOf="@id/btn8"
        app:layout_constraintLeft_toRightOf="@id/btn8" />
    <Button
        android:id="@+id/btnDivision"
        android:layout_width="100dp"
        android:layout_height="80dp"
        android:backgroundTint="#7FDD5D"
        android:textColor="@color/white"
        android:text="/"
        android:textSize="30dp"
        android:textStyle="bold"
        android:layout_marginLeft="5dp"
        app:layout_constraintTop_toTopOf="@id/btn9"
        app:layout_constraintLeft_toRightOf="@id/btn9" />
    <Button
        android:id="@+id/btn6"
        android:layout_width="100dp"
        android:layout_height="80dp"
        android:backgroundTint="#7FDD5D"
        android:textColor="@color/white"
        android:text="4"
        android:textSize="30dp"
        android:textStyle="bold"
        android:layout_marginLeft="5dp"
        app:layout_constraintTop_toBottomOf="@id/btn7"
        app:layout_constraintLeft_toLeftOf="parent" />
    <Button
        android:id="@+id/btn5"
        android:layout_width="100dp"
        android:layout_height="80dp"
        android:backgroundTint="#7FDD5D"
        android:textColor="@color/white"
        android:text="5"
        android:textSize="30dp"
        android:textStyle="bold"
        android:layout_marginLeft="5dp"
        app:layout_constraintTop_toTopOf="@id/btn6"
        app:layout_constraintLeft_toRightOf="@id/btn6" />
    <Button
        android:id="@+id/btn4"
        android:layout_width="100dp"
        android:layout_height="80dp"
        android:backgroundTint="#7FDD5D"
        android:textColor="@color/white"
        android:text="6"
        android:textSize="30dp"
        android:textStyle="bold"
        android:layout_marginLeft="5dp"
        app:layout_constraintTop_toTopOf="@id/btn5"
        app:layout_constraintLeft_toRightOf="@id/btn5" />
    <Button
        android:id="@+id/btnMultiplication"
        android:layout_width="100dp"
        android:layout_height="80dp"
        android:backgroundTint="#7FDD5D"
        android:textColor="@color/white"
        android:text="*"
        android:textSize="30dp"
        android:textStyle="bold"
        android:layout_marginLeft="5dp"
        app:layout_constraintTop_toTopOf="@id/btn4"
        app:layout_constraintLeft_toRightOf="@id/btn4" />
    <Button
        android:id="@+id/btn1"
        android:layout_width="100dp"
        android:layout_height="80dp"
        android:backgroundTint="#7FDD5D"
        android:textColor="@color/white"
        android:text="1"
        android:textSize="30dp"
        android:textStyle="bold"
        android:layout_marginLeft="5dp"
        app:layout_constraintTop_toBottomOf="@id/btn4"
        app:layout_constraintLeft_toLeftOf="parent" />
    <Button
        android:id="@+id/btn2"
        android:layout_width="100dp"
        android:layout_height="80dp"
        android:backgroundTint="#7FDD5D"
        android:textColor="@color/white"
        android:text="2"
        android:textSize="30dp"
        android:textStyle="bold"
        android:layout_marginLeft="5dp"
        app:layout_constraintTop_toTopOf="@id/btn1"
        app:layout_constraintLeft_toRightOf="@id/btn1"/>
    <Button
        android:id="@+id/btn3"
        android:layout_width="100dp"
        android:layout_height="80dp"
        android:backgroundTint="#7FDD5D"
        android:textColor="@color/white"
        android:text="3"
        android:textSize="30dp"
        android:textStyle="bold"
        android:layout_marginLeft="5dp"
        app:layout_constraintTop_toTopOf="@id/btn2"
        app:layout_constraintLeft_toRightOf="@id/btn2"/>
    <Button
        android:id="@+id/btnSub"
        android:layout_width="100dp"
        android:layout_height="80dp"
        android:backgroundTint="#7FDD5D"
        android:textColor="@color/white"
        android:text="-"
        android:textSize="30dp"
        android:textStyle="bold"
        android:layout_marginLeft="5dp"
        app:layout_constraintTop_toTopOf="@id/btn3"
        app:layout_constraintLeft_toRightOf="@id/btn3"/>
    <Button
        android:id="@+id/btnpoint"
        android:layout_width="100dp"
        android:layout_height="80dp"
        android:backgroundTint="#7FDD5D"
        android:textColor="@color/white"
        android:text="."
        android:textSize="30dp"
        android:textStyle="bold"
        android:layout_marginLeft="5dp"
        app:layout_constraintTop_toBottomOf="@id/btn1"
        app:layout_constraintLeft_toLeftOf="parent" />
    <Button
        android:id="@+id/btn0"
        android:layout_width="100dp"
        android:layout_height="80dp"
        android:backgroundTint="#7FDD5D"
        android:textColor="@color/white"
        android:text="0"
        android:textSize="30dp"
        android:textStyle="bold"
        android:layout_marginLeft="5dp"
        app:layout_constraintTop_toTopOf="@id/btnpoint"
        app:layout_constraintLeft_toRightOf="@id/btnpoint"/>
    <Button
        android:id="@+id/btnequal"
        android:layout_width="100dp"
        android:layout_height="80dp"
        android:backgroundTint="#7FDD5D"
        android:textColor="@color/white"
        android:text="="
        android:textSize="30dp"
        android:textStyle="bold"
        android:layout_marginLeft="5dp"
        app:layout_constraintTop_toTopOf="@id/btn0"
        app:layout_constraintLeft_toRightOf="@id/btn0"/>
    <Button
        android:id="@+id/btnaddition"
        android:layout_width="100dp"
        android:layout_height="80dp"
        android:backgroundTint="#7FDD5D"
        android:textColor="@color/white"
        android:text="+"
        android:textSize="30dp"
        android:textStyle="bold"
        android:layout_marginLeft="5dp"
        app:layout_constraintTop_toTopOf="@id/btnequal"
        app:layout_constraintLeft_toRightOf="@id/btnequal"/>
</androidx.constraintlayout.widget.ConstraintLayout>
