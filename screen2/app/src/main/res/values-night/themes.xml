        <item name="colorPrimary">@color/gray</item>
        <item name="colorPrimaryVariant">@color/yellow</item>
        <item name="colorOnPrimary">@color/coffee</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/golden</item>
